<MdcForm class="gatekeeper-forgot-password" @submit={{this.submit}} @validity={{this.validity}} {{did-insert this.didInsert}}>
  <MdcTextfield @style={{@style}}
                @value={{this.email}}
                type={{this.type}}
                @label={{unless @emailPlaceholder this.emailLabel}}
                @errorMessage={{this.emailErrorMessage}}
                placeholder={{@emailPlaceholder}}
                required="true"
                autocomplete="off" />

  <MdcButton type="submit"
             @label={{if this.submitting this.submittingButtonLabel this.submitButtonLabel}}
             @style={{@submitButtonStyle}}
             disabled={{this.submitButtonDisabled}} />
</MdcForm>