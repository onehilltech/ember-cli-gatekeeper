<MdcForm class="gatekeeper-reset-password" @submit={{this.submit}} @validity={{this.validity}}>
  <MdcPasswordTextfield @style={{@style}}
                        @value={{this.password}}
                        @label={{unless @passwordPlaceholder this.passwordLabel}}
                        @errorMessage={{this.passwordErrorMessage}}
                        placeholder={{@passwordPlaceholder}}
                        required="true" />

  <MdcButton type="submit"
             @label={{this.submitButtonLabel}}
             @style={{@submitButtonStyle}}
             disabled={{this.submitButtonDisabled}} />
</MdcForm>